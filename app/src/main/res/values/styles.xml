<resources>

    <style name="CircleButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GrayButtonThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/CircleButtonShapeAppearance</item>
        <item name="rippleColor">@color/soft_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GrayButtonThemeOverlay">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="CircleButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="CategoryButton" parent="CircleButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">@style/TextStyle.18.Bold</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_medium</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_medium</item>
    </style>

</resources>